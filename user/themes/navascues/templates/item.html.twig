{% extends 'partials/base.html.twig' %}

{% block content %}
<div class="item">
	{{ page.content}}

    {% for item in page.header.item %}

		<section class="jewel-image">
			<img src="{{(item.myImage|first).path}}" alt="{{page.title}}">
		</section>

		<section class="jewel-details">
        	<h1>{{ item.title }}</h1>
        	<h2>Descripcion y Detalles</h2>
        	<p>{{ item.description }}</p>
        	<h3>Precio: {{ item.price }}</h3>
        	<h3>Contactenos:</h3>
        	<ul>
        		<li>Correo : <a href="#">veganavascues@gmail.com</a></li>
        		<li>TEL: 222-222-222</li>
        	</ul>
        </section>
        
	{% endfor %}
</div>
{% endblock %}